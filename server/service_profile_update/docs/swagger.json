    "definitions": {
        "dto.ConfirmPasswordResetDTO": {
            "type": "object",
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "string",
                    "example": "abc123..."
                }
            }
        },
        "dto.CreateFaceProfileUpdateRequestDTO": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "maxLength": 500,
                    "example": "Need to update my face photo for better recognition"
                }
            }
        },
        "dto.RejectRequestBodyDTO": {
            "type": "object",
            "properties": {
                "reason": {
                    "type": "string",
                    "maxLength": 500,
                    "example": "Photos are not clear enough"
                }
            }
        },
        "dto.ResetPasswordRequestDTO": {
            "type": "object",
            "required": [
                "employee_id"
            ],
            "properties": {
                "employee_id": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 1,
                    "example": "EMP001"
                }
            }
        },
        "model.ApproveRequestOutput": {
            "type": "object",
            "properties": {
                "expires_at": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "request_id": {
                    "type": "string"
                },
                "update_link": {
                    "type": "string"
                }
            }
        },
        "model.ConfirmPasswordResetOutput": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "model.CreateFaceProfileUpdateRequestOutput": {
            "type": "object",
            "properties": {
                "can_retry": {
                    "type": "boolean"
                },
                "message": {
                    "type": "string"
                },
                "request_id": {
                    "type": "string"
                },
                "requests_remaining_this_month": {
                    "type": "integer"
                },
                "retry_after_days": {
                    "description": "Days until can retry",
                    "type": "integer"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "model.FaceProfileUpdateRequestDTO": {
            "type": "object",
            "properties": {
                "approved_at": {
                    "type": "string"
                },
                "approved_by": {
                    "type": "string"
                },
                "company_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "meta_data": {
                    "type": "object",
                    "additionalProperties": true
                },
                "reason": {
                    "type": "string"
                },
                "rejection_reason": {
                    "type": "string"
                },
                "request_count_in_month": {
                    "type": "integer"
                },
                "request_id": {
                    "type": "string"
                },
                "request_month": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "update_link": {
                    "type": "string"
                },
                "update_link_expires_at": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                },
                "user_email": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                },
                "user_name": {
                    "type": "string"
                }
            }
        },
        "model.GetMyUpdateRequestsOutput": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.FaceProfileUpdateRequestDTO"
                    }
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "model.GetPendingRequestsOutput": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.FaceProfileUpdateRequestDTO"
                    }
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "model.RejectRequestOutput": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "request_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "model.ResetEmployeePasswordOutput": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "model.UpdateFaceProfileOutput": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "profile_id": {
                    "type": "string"
                },
                "quality_score": {
                    "type": "number"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "model.ValidateUpdateTokenOutput": {
            "type": "object",
            "properties": {
                "company_id": {
                    "type": "string"
                },
                "expires_at": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                },
                "valid": {
                    "type": "boolean"
                }
            }
        },
        "response.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "data": {},
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}